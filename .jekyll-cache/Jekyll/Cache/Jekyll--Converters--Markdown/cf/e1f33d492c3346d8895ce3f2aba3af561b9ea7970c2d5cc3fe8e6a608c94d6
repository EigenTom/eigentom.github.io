<span class="ss">add_3_and_double</span><span class="p">(</span><span class="nv">X</span><span class="p">,</span> <span class="nv">Y</span><span class="p">)</span> <span class="p">:-</span> <span class="nv">Y</span> <span class="ss">is</span> <span class="p">(</span><span class="nv">X</span> <span class="o">+</span> <span class="m">3</span><span class="p">)</span> <span class="o">*</span> <span class="m">2</span><span class="p">.</span>

<span class="o">//</span> <span class="ss">then</span> <span class="ss">it</span> <span class="ss">will</span> <span class="ss">work</span><span class="p">!</span>
<span class="o">?-</span> <span class="ss">add_3_and_double</span><span class="p">(</span><span class="m">114514</span><span class="p">,</span> <span class="nv">X</span><span class="p">).</span>
<span class="nv">X</span> <span class="o">=</span> <span class="m">229034</span>
