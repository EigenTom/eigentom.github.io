<span class="kd">const</span> <span class="nx">slideRight</span> <span class="o">=</span> <span class="nb">document</span><span class="p">.</span><span class="nx">querySelector</span><span class="p">(</span><span class="dl">'</span><span class="s1">.right-slide</span><span class="dl">'</span><span class="p">);</span>
<span class="kd">const</span> <span class="nx">slideLeft</span> <span class="o">=</span> <span class="nb">document</span><span class="p">.</span><span class="nx">querySelector</span><span class="p">(</span><span class="dl">'</span><span class="s1">.left-slide</span><span class="dl">'</span><span class="p">);</span>
<span class="kd">const</span> <span class="nx">upButton</span> <span class="o">=</span> <span class="nb">document</span><span class="p">.</span><span class="nx">querySelector</span><span class="p">(</span><span class="dl">'</span><span class="s1">.up-button</span><span class="dl">'</span><span class="p">);</span>
<span class="kd">const</span> <span class="nx">downButton</span> <span class="o">=</span> <span class="nb">document</span><span class="p">.</span><span class="nx">querySelector</span><span class="p">(</span><span class="dl">'</span><span class="s1">.down-button</span><span class="dl">'</span><span class="p">);</span>
<span class="kd">const</span> <span class="nx">slidesLength</span> <span class="o">=</span> <span class="nx">slideRight</span><span class="p">.</span><span class="nx">querySelectorAll</span><span class="p">(</span><span class="dl">'</span><span class="s1">div</span><span class="dl">'</span><span class="p">).</span><span class="nx">length</span><span class="p">;</span>

