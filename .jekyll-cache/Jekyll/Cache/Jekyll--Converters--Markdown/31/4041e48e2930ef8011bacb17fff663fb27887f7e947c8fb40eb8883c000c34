            <span class="nt">&lt;div</span> <span class="na">style=</span><span class="s">"background-image: url('../expanding-cards/avatar1.jpg');"</span><span class="nt">&gt;&lt;/div&gt;</span>
        <span class="nt">&lt;/div&gt;</span>

        <span class="nt">&lt;div</span> <span class="na">class=</span><span class="s">"action-buttons"</span><span class="nt">&gt;</span>
            <span class="nt">&lt;button</span> <span class="na">class=</span><span class="s">"down-button"</span><span class="nt">&gt;</span>
                <span class="nt">&lt;i</span> <span class="na">class=</span><span class="s">"fas fa-arrow-down"</span><span class="nt">&gt;&lt;/i&gt;</span>
