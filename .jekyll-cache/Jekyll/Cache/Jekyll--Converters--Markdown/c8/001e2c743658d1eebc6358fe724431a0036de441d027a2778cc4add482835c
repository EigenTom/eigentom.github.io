    <span class="nx">s</span> <span class="o">=</span> <span class="nx">s</span> <span class="o">&lt;</span> <span class="mi">10</span> <span class="p">?</span> <span class="s2">`0</span><span class="p">${</span><span class="nx">s</span><span class="p">}</span><span class="s2">`</span> <span class="p">:</span> <span class="nx">s</span>
    <span class="nx">timeEl</span><span class="p">.</span><span class="nx">innerHTML</span> <span class="o">=</span> <span class="s2">`Time: </span><span class="p">${</span><span class="nx">m</span><span class="p">}</span><span class="s2">:</span><span class="p">${</span><span class="nx">s</span><span class="p">}</span><span class="s2">`</span>
    <span class="nx">seconds</span><span class="o">++</span>
<span class="p">}</span>

<span class="c1">// handle insert creation: randomly place insects on screen</span>
<span class="kd">function</span> <span class="nx">createInsect</span><span class="p">()</span> <span class="p">{</span>
    <span class="kd">const</span> <span class="nx">insect</span> <span class="o">=</span> <span class="nb">document</span><span class="p">.</span><span class="nx">createElement</span><span class="p">(</span><span class="dl">'</span><span class="s1">div</span><span class="dl">'</span><span class="p">)</span>
