    <span class="nx">addInsects</span><span class="p">()</span>
<span class="p">}</span>

<span class="kd">function</span> <span class="nx">addInsects</span><span class="p">()</span> <span class="p">{</span>
    <span class="nx">setTimeout</span><span class="p">(</span><span class="nx">createInsect</span><span class="p">,</span> <span class="mi">1000</span><span class="p">)</span>
